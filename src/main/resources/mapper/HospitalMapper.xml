<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sise.pet.mapper.HospitalMapper">

    <resultMap id="BaseResultMap" type="com.sise.pet.entity.Hospital">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="main_pic" property="mainPic" />
        <result column="content" property="content" />
        <result column="concat" property="concat" />
        <result column="lng" property="lng" />
        <result column="lat" property="lat" />
        <result column="location" property="location" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <resultMap id="withSubImgResultMap" type="com.sise.pet.entity.Hospital" extends="BaseResultMap">
        <collection property="subImgs" ofType="string">
            <result column="subImg"/>
        </collection>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, main_pic, content, concat, lng, lat, location, create_time
    </sql>

    <select id="getWithSubImgPage" resultMap="withSubImgResultMap">
        select
        hospital.*,tmp.url as subImg
        from hospital left join
        (select * from img_entity where entity_type = 'hospital') as tmp
        on hospital.id = tmp.entity_id
        <where>
            <if test="hospital.id != null">
                and hospital.id = #{hospital.id}
            </if>
        </where>
    </select>

    <select id="getSingleWithSubImg" resultMap="withSubImgResultMap">
        select
        hospital.*,tmp.url as subImg
        from hospital left join
        (select * from img_entity where entity_type = 'hospital') as tmp
        on hospital.id = tmp.entity_id
        where hospital.id = #{id}
    </select>
</mapper>
